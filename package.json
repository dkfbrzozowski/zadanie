{
  "name": "zadanie",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:html",
    "test:html": "nu-html-checker *.html",
    "build": "npm run build:clean && npm run build:scss && npm run build:autoprefixer && npm run test",
    "build:clean":"rimraf(f, callback)",
    "build:scss": "scss --sourcemap=none --update scss/style.scss:css/style.css",
    "build:autoprefixer": "autoprefixer-cli css/style.css",

    "watch": "parallelshell \"npm run watch:scssprefixer\" \"npm run watch:browsersync\" ",
    "watch:scssprefixer": "onchange -d 100 css/style.css -- scss --watch scss/style.scss:css/style.css -- autoprefixer-cli -o css/style.prefixed.css css/style.css",
 
    "watch:browsersync": "browser-sync start --server --files \"css/*.css\""  
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.18.13",
    "node-sass": "^4.7.1",
    "nu-html-checker": "^0.1.0",
    "onchange": "^3.2.1",
    "parallelshell": "^3.0.2",
    "rimraf": "^2.6.2",
    "sass": "^1.0.0-beta.3",
    "scss": "^0.2.4"
  }
}
